@model List<PolizaForGridView>
@{
    ViewBag.Title = "Polizas";
}

<h2 class="page-header">Polizas</h2>

<div class="btn-group btn-group-justified well">
    <a class="btn btn-danger" href="~/poliza/crud">
        <i class="fa fa-plus"></i> Nuevo registro
    </a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Tipo Cubrimiento</th>
            <th>Tipo Riesgo</th>
            <th>Periodo</th>
            <th>Precio</th>
            <th>Estado actual</th>
            <th style="width:40px;"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
        <tr>
            <td>
                <a href="~/poliza/crud/@m.Id">@m.Nombre</a>
            </td>
            <td>@m.TipoCubrimiento</td>
            <td>@m.TipoRiesgo</td>
            <td>@m.PeriodoMeses</td>
            <td>@m.PrecioPoliza</td>
            <td>@m.CurrentStatus</td>
            <td>
                <a class="btn btn-xs btn-danger btn-block" href="~/poliza/delete/@m.Id">
                    <i class="fa fa-trash"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>